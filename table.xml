<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <!-- Vos changesets existants... -->

    <changeSet id="4-create-service-technologies-table" author="votre_nom">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="service_technologies"/>
            </not>
        </preConditions>

        <createTable tableName="service_technologies" remarks="Table de gestion des technologies des services API">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            
            <column name="api_service_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            
            <column name="technology_name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            
            <column name="technology_version" type="varchar(100)"/>
            
            <column name="created_at" type="timestamp with time zone">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint 
            baseTableName="service_technologies"
            baseColumnNames="api_service_id"
            referencedTableName="api.service"
            referencedColumnNames="id"
            constraintName="fk_service_tech_to_api_service"
            deferrable="false"
            initiallyDeferred="false"/>

        <createIndex tableName="service_technologies" indexName="idx_service_tech_api_service">
            <column name="api_service_id"/>
        </createIndex>

        <createIndex tableName="service_technologies" indexName="idx_service_tech_name">
            <column name="technology_name"/>
        </createIndex>

        <rollback>
            <dropTable tableName="service_technologies"/>
        </rollback>
    </changeSet>
</databaseChangeLog>
